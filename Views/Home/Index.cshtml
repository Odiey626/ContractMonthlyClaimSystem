@model List<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Claim History";
}

<link rel="stylesheet" href="~/css/Index.css" />

<!-- Navbar -->
<partial name="_Navbar" />

<div class="container">
    <h2>Claim History</h2>

    @if (Model != null && Model.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Claim ID</th>
                    <th>Contractor Name</th>
                    <th>Hours Worked</th>
                    <th>Hourly Rate (R)</th>
                    <th>Total Amount (R)</th>
                    <th>Date & Time</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var claim in Model)
                {
                    <tr>
                        <td>@claim.ClaimID</td>
                        <td>@claim.ContractorName</td>
                        <td>@claim.HoursWorked</td>
                        <td>@claim.HourlyRate</td>
                        <td>@claim.TotalAmount</td>
                        <td>@claim.ClaimDate.ToString("hh:mm tt dd/MM/yyyy")</td>
                        <td>
                            @if (claim.Status == "Approved")
                            {
                                <span style="color:green;">@claim.Status</span>
                            }
                            else if (claim.Status == "Rejected")
                            {
                                <span style="color:red;">@claim.Status</span>
                            }
                            else
                            {
                                <span style="color:orange;">@claim.Status</span>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No claims submitted yet.</p>
    }
</div>

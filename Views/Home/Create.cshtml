@{
    ViewData["Title"] = "Submit Claim";
}

<link rel="stylesheet" href="~/css/Create.css" />

<!-- Sticky Navbar -->
<partial name="_Navbar" />

<!-- Page Content -->
<div class="container">
    <h2>Submit Your Claim</h2>

    <!-- Success message -->
    @if (ViewBag.SuccessMessage != null)
    {
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    }

    <!-- File upload message -->
    @if (ViewBag.FileMessage != null)
    {
        <div class="alert alert-info">
            @ViewBag.FileMessage
        </div>
    }

    <!-- Claim Result -->
    @if (ViewBag.TotalAmount != null)
    {
        <div class="alert alert-secondary">
            <strong>Hours Worked:</strong> @ViewBag.Hours <br />
            <strong>Hourly Rate:</strong> R @ViewBag.Rate <br />
            <strong>Total Claim Amount:</strong> <span style="color:green; font-weight:bold;">R @ViewBag.TotalAmount</span>
        </div>
    }

    <!-- Claim Form -->
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label for="hours">Hours Worked</label>
            <input type="number" id="hours" name="hours" class="form-control" placeholder="Enter total hours" required />
        </div>

        <div class="form-group">
            <label for="rate">Hourly Rate (R)</label>
            <input type="number" id="rate" name="rate" class="form-control" placeholder="Enter hourly rate" required />
        </div>

        <div class="form-group">
            <label for="document">Upload Supporting Document</label>
            <input type="file" id="document" name="document" class="form-control" />
        </div>

        <button type="submit" class="btn btn-primary">Submit Claim</button>
    </form>
</div>
